@using OptaTrack.Authentication

@if (User.Identity.IsAuthenticated)
{
<ul class="nav navbar-nav navbar-right">
    <li>
        <a asp-area="" asp-controller="Account" asp-action="MyProfile" title="MyProfile">Hello @User.Name()!</a>
    </li>
    <li>
        <a asp-area="" asp-controller="Account" asp-action="LogOut" class="btn btn-link navbar-btn navbar-link">Log off</a>
    </li>
</ul>

}
else
{
<ul class="nav navbar-nav navbar-right">
    <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
    <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
</ul>
}
